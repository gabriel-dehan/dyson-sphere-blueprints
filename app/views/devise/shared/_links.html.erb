<%- if controller_name != 'sessions' %>
  <div class="m-links__login">
    <%= link_to t('devise.shared.links.already_have_account'), new_session_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <div class="m-links__register">
    <%= link_to t('devise.shared.links.no_account'), new_registration_path(resource_name) %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="m-links__passwordForgotten">
    <%= link_to t('devise.shared.links.forgot_password'), new_password_path(resource_name) %><br />
  </div>
<% end %>

<div class="m-omniauth">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <% if provider == :discord %>
        <%= link_to omniauth_authorize_path(resource_name, provider), method: :post, class: "a-discord-auth-button" do %>
          <i class="fab fa-discord"></i>
          <%= t('devise.shared.links.login_with', provider: OmniAuth::Utils.camelize(provider)) %>
        <% end %>
      <% else %>
        <%= link_to t('devise.shared.links.login_with', provider: OmniAuth::Utils.camelize(provider)), omniauth_authorize_path(resource_name, provider), method: :post %><br />
      <% end %>
    <% end %>
  <% end %>
</div>

<% if false %>
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to t('devise.shared.links.resend_confirmation'), new_confirmation_path(resource_name) %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to t('devise.shared.links.resend_unlock'), new_unlock_path(resource_name) %><br />
  <% end %>
<% end%>
