<div class="p-registration-edit">
  <div class="m-form">
    <div class="m-form__container">
      <h1 class="m-form__title"><%= t('devise.registrations.edit.title') %></h1>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :username, required: true %>
          <%= f.input :email, required: true, autofocus: true %>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p><%= t('devise.registrations.edit.waiting_confirmation', email: resource.unconfirmed_email) %></p>
          <% end %>

          <% if resource.provider.blank? %>
            <%= f.input :password,
                        hint: t('devise.registrations.edit.leave_blank_hint'),
                        required: false,
                        input_html: { autocomplete: "new-password" } %>
            <br/>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" } %>

            <%= f.input :current_password,
                        hint: t('devise.registrations.edit.current_password_hint'),
                        required: true,
                        input_html: { autocomplete: "current-password" } %>
          <% end %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t('devise.registrations.edit.update') %>
        </div>
      <% end %>
      <p><br /><%= link_to t('devise.registrations.edit.cancel_account'), registration_path(resource_name), data: { confirm: t('devise.registrations.edit.cancel_confirm') }, method: :delete %></p>

      <%= link_to t('common.back'), :back %>
    </div>
  </div>
</div>
