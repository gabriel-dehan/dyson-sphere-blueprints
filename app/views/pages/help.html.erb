<div class="p-staticPage p-help">
  <h1><%= t('pages.help.title') %>
    <a href="https://discord.com/invite/sgU8QfZhuB" target="_blank" rel="noopener noreferrer">
      <%= image_tag 'buttons/discord.png', alt: t('pages.help.discord_alt') %>
    </a>
  </h1>
  <div class="m-tabs">
    <div class="m-tabs-select-container">
      <%= link_to help_path(for: 'factory'), class: "m-tabs-select #{(!params[:for] || params[:for] == 'factory') && 'active'}" do %>
        <%= raw t('pages.help.factory_tab') %>
      <% end %>
      <%= link_to help_path(for: 'dyson_sphere'), class: "m-tabs-select #{(params[:for] == 'dyson_sphere') && 'active'}" do %>
        <%= raw t('pages.help.dyson_sphere_tab') %>
      <% end %>
      <%= link_to help_path(for: 'mecha'), class: "m-tabs-select #{(params[:for] == 'mecha') && 'active'}" do %>
        <%= raw t('pages.help.mecha_tab') %>
      <% end %>
    </div>
  </div>
  <div class="p-help__content">
    <% if params[:for] == 'dyson_sphere' %>
      <%= render 'pages/help/dyson_sphere_blueprint_help' %>
    <% elsif params[:for] == 'mecha' %>
      <%= render 'pages/help/mecha_blueprint_help' %>
    <% else %>
      <%= render 'pages/help/factory_blueprint_help' %>
    <% end %>
  </div>
</div>
