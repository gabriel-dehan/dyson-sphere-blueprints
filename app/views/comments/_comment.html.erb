<div class="comment" id="comment-<%= comment.id %>">
  <div class="d-flex align-items-start mb-3">
    <div class="flex-grow-1">
      <div class="d-flex justify-content-between align-items-start">
        <div class="fw-bold">
          <%= link_to comment.user.username, user_blueprints_path(comment.user), class: "text-white" %>
          <% if comment.user == @blueprint.user %>
            <span class="text-muted" style="font-size: 0.9rem; margin-left: 0.5rem;">Original Creator</span>
          <% end %>
        </div>
        <div class="comment-meta">
          <small class="text-muted"><%= time_ago_in_words(comment.created_at) %> ago</small>
        </div>
      </div>
      <div class="comment-content mt-1">
        <%= simple_format(comment.content) %>
      </div>
      <% if current_user == comment.user %>
        <%= button_to blueprint_comment_path(@blueprint, comment), 
            method: :delete, 
            class: "btn btn-sm btn-outline-danger mt-2",
            form: { data: { turbo_confirm: "Are you sure you want to delete this comment?" } } do %>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>
</div> 