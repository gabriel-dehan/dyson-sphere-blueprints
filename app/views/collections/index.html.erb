<div class="p-collections-index">
  <div class="p-collections-index__header">
    <h1><%= t('collections.index.title') %></h1>
    <% if current_user %>
      <%= link_to t('collections.index.my_collections'), collections_users_path, class: 'a-button' %>
    <% end %>
  </div>

  <div class="t-collections">
    <%= render "collections/shared/list", collections: @collections, with_actions: false %>
    <div class="m-pagination">
      <%= paginate @collections %>
    </div>
  </div>
</div>
